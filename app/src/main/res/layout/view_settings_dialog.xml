<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/base_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_edittext_states"
            android:ems="10"
            android:inputType="textCapCharacters"
            android:maxLines="1"
            android:padding="10dp"
            android:text="@={model.base_url}"
            android:textColor="#4a4a4a"
            app:onEditorActionListener="@{(view, action_id, event) -> model.onBaseUrlAction(action_id)}" />

        <EditText
            android:id="@+id/location_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_edittext_states"
            android:ems="10"
            android:inputType="textCapCharacters"
            android:maxLines="1"
            android:padding="10dp"
            android:text="@={model.location_distance}"
            android:textColor="#4a4a4a"
            app:onEditorActionListener="@{(view, action_id, event) -> model.onLocationDistanceAction(action_id)}" />

        <EditText
            android:id="@+id/location_interval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext_states"
            android:ems="10"
            android:inputType="textCapCharacters"
            android:maxLines="1"
            android:padding="10dp"
            android:text="@={model.location_interval}"
            android:textColor="#4a4a4a"
            app:onEditorActionListener="@{(view, action_id, event) -> model.onLocationIntervalAction(action_id)}" />
    </LinearLayout>

    <data>

        <variable
            name="model"
            type="ru.azbykamebeli.tracker.presentation.view_model.SettingsDialogViewModel" />
    </data>
</layout>